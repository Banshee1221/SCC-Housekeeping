sudo apt-get install nfs-kernel-server -y
mkdir /mnt/cloud
echo "/mnt/cloud *(rw,sync,no_root_squash,no_subtree_check)" >> /etc/exports
exportfs -a
sudo service nfs-kernel-server restart

